<% f.inputs do %>
  <%= f.input :first_name %> 
  <%= f.input :last_name %> 
  <%= f.input :email %>
  <% if permitted_to?(:set_role, @user) %>
    <%= f.input :role, :as => :select, :collection => User::ROLES %>
  <% end %>
<% end %>

<% f.buttons do %>
  <%= f.commit_button %>
  <%= f.cancel_link %>
<% end %>
