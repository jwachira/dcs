<% title "Change Password for #{@user.full_name}"  %>
<% semantic_form_for @user, :url => user_password_path(@user) do |f| %>
  <%= password_instructions %>
  <% f.inputs do %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <% f.buttons do%>
    <%= f.cancel_link %>
    <%= f.commit_button %>
  <% end %>
<% end %>
