<% title "Users", :body => true %>

<%= button_link_to 'New User', new_user_path %>

<table class"data">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= user.role  %></td>
      <td><%= link_to "Edit", edit_user_path(user) %> | <%= link_to "Remove", delete_user_path(user) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
