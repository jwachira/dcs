<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
	<%= stylesheet_link_tag 'screen.css', 	:media => :screen %>
	<%= stylesheet_link_tag 'cte.css', 		:media => :screen %>
	<%= stylesheet_link_tag 'forms.css', 	:media => :screen %>
	<%= stylesheet_link_tag 'dev.css', 		:media => :screen %>
	<%= stylesheet_link_tag 'print.css', 	:media => :print  %>
	
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'popup.js' %>
	<%= javascript_include_tag 'jquery.template.js' %>
	<%= yield :javascript_tag %>
	
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="author" content="WestEd" />
	
	<title>CTE | <%= yield :title %></title>
</head>


<!--[if IE 6]>
  <body class="ie ie6">
<![endif]-->

<!--[if IE 7]>
  <body class="ie ie7">
<![endif]-->

<!--[if !IE]>-->
  <body>
<!--<![endif]-->

	<script type="text/javascript" charset="utf-8">
			// add 'js' class to body element if javascript is enabled
			document.body.className += ' js';
		</script>

	
	
	<!--CONTAINER-->
	<div class="container prepend-top">
	
	<!-- HEADER -->
	<div class="span-48 header last">
		
		<%= yield :header %>	
		<div class="span-24 prepend-top prepend-1 ">
			
			<h1><span><a href="/" title="CTE Home">CTE Interactive</a></span></h1>
			<h2>CTE Community Collaborative and Construction Data</h2>
			
		</div> <!-- END HEADER TEXT  -->
		
		<% if current_user %>
		<div class="utility prepend-top">
			<ul class="clearfix">
			<li><span>Hello, <%= current_user.first_name %>!</span></li>
			<li><%= link_to 'Log Out', logout_url %></li>
			<li><%= link_to "My Profile", user_path(current_user)%></li>
			<li><%= link_to "FAQs", faq_path %></li>
			<% if manager?%>
        <li><%= link_to "Manage CTE Data", surveys_path %></li>
			<% end %>
			</ul>
		</div> <!-- END UTILITY NAV  -->
		
		<% end %>
			
    </div> <!-- END HEADER DIV  -->


	<!-- MAIN -->
	<div class="<%= yield(:main_class) || 'span-46' %> prepend-1 prepend-top">
		<!-- CONTENT -->
		<div class="content append-bottom box-2">
						
			<% unless flash[:notice].blank? %>
				<div id="flash_notice"><%= flash[:notice] %></div>
			<% end %>

			<% unless flash[:error].blank? %>
				<div id="flash_error"><%= flash[:error] %></div>
			<% end %>
			
  			<h2><%= yield :title %>	</h2>
	
			<%= yield %>
		</div><!-- END CONTENT  -->

	</div><!-- MAIN end -->

	<div class="span-12 prepend-top last">
		
		<%= yield :side_bar %>
		
    </div> <!-- END SIDEBAR CONTAINER -->

</div> <!-- END CONTAINER  -->

</body>
</html>
