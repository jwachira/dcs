<% title 'Listing certifications' %>

<%= link_to 'New Certification', new_certification_url %>

<table class="data">
  <thead>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </thead>
  <tbody>
    <% @certifications.each do |certification| %>
      <tr>
        <td><%= link_to certification.name, certification             %>
        <td><%= link_to 'Edit', edit_certification_path(certification) %></td>
        <td><%= link_to 'Destroy', certification, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
