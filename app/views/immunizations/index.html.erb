<% title 'Listing Immunizations', :body => true %>

<%= link_to 'New immunization', new_immunization_path %>

<table class="data">
  <thead>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </thead>

<% @immunizations.each do |immunization| %>
  <tr>
    <td><%= immunization.name %>
    <td><%= link_to 'Show', immunization %></td>
    <td><%= link_to 'Edit', edit_immunization_path(immunization) %></td>
    <td><%= link_to 'Destroy', immunization, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
