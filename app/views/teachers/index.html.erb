<% title "Listing teachers", :body => true %>

<%= link_to 'Add Teacher', new_provider_teacher_url(current_user.provider) %>

<table class="data">
  <thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Phone Number</th>
    <th colspan="2">Actions</th>
  </thead>
   <% @teachers.each do |teacher| %>
      <tr>
        <td><%= link_to teacher.first_name, provider_teacher_url(teacher.provider, teacher)           %></td>
        <td><%= teacher.last_name             %></td>
        <td><%= teacher.phone_number  %></td>
        <td><%= link_to 'Edit', edit_provider_teacher_url(teacher.provider, teacher) %></td>
      </tr>
    <% end %>
</table>
