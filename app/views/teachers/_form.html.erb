<div class="left-col">
  <% f.inputs "Personal Information" do %>
    <%= f.input :first_name  %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>
    <%= f.input :gender, :collection => Teacher::GENDER %>
    <%= f.input :date_of_birth %>
    <%= f.input :street_address %>
    <%= f.input :city %>
    <%= f.input :state, :as => :state %>
    <%= f.input :postal_code %>
    <%= f.input :phone_number %>
  <% end %>
</div>
<div class="right-col">
  <% f.inputs  "Proffessional Information" do %>
    <%= f.input :email %>
    <%= f.input :degree %>
    <%= f.input :field_of_study %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :years, :as => :numeric %>
    <%= f.input :active, :wrapper_html => {:class => "agree_to_terms"} %>
  <% end %>
</div>
