<h2>Change My Password</h2>
<% semantic_form_for @user, :url => password_reset_path, :method => :put do |f| %>
  <%= password_instructions %>
  <% f.inputs do %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <% end %>
  <% f.buttons do %>
  <%= f.commit_button "Update my password and log me in" %>
  <% end %>
<% end %>